import java.util.Scanner;

public class ejercicio5{

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Pedir al usuario la distancia del viaje en kil贸metros
        System.out.println("Ingrese la distancia del viaje en kil贸metros:");
        double distancia = scanner.nextDouble();

        // Pedir al usuario el consumo de combustible en litros por kil贸metro
        System.out.println("Ingrese el consumo de combustible (litros por kil贸metro):");
        double consumo = scanner.nextDouble();

        // Pedir al usuario el precio del combustible por litro
        System.out.println("Ingrese el precio del combustible por litro:");
        double precioCombustible = scanner.nextDouble();

        // Calcular el costo total del viaje
        double costoTotal = distancia * consumo * precioCombustible;

        // Mostrar el costo total
        System.out.println("El costo total del viaje es: $" + costoTotal);
    }
}
